---
import * as config from "@/config";

import { SettingsMenu } from "./Settings";
---

<footer class="py-6 md:py-0">
  <div
    class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row"
  >
    <SettingsMenu client:idle />
    <p
      class="text-balance text-center text-sm leading-loose text-muted-foreground w-full"
    >
      <span>Build by Ed Jex.</span>

      <span>
        Issues / Feature requests:
        <a
          href={config.issues_url}
          target="_blank"
          rel="noreferrer"
          class="font-medium underline underline-offset-4"
        >
          GitHub
        </a>
      </span>
    </p>
  </div>
</footer>
